{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"strictFunctionTypes": true,
		"sourceMap": true,
		"inlineSources": true,
		"moduleResolution": "node",
		"outDir": "out",
		"declaration": true,
		"declarationDir": "out/types",
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}
